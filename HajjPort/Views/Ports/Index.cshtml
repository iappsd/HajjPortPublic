@model IEnumerable<HajjPort.Models.Port>

@{
    ViewData["Title"] = "Index";
}

<h2>
    إنشاء  منفذ جديد
</h2>
<hr />
<p>
    <a asp-action="Create" class="btn btn-primary">
        إنشاء  منفذ جديد
    </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PortDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AppUser.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
             <tr>
             
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PortDescription)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AppUser.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsActive)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.id" class="btn btn-outline-info">تعديل</a> |

                    <a asp-action="Delete" asp-route-id="@item.id" class="btn btn-outline-danger">حذف</a>
                </td>
            </tr> 
        }
    </tbody>
</table>
