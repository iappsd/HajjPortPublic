@model HajjPort.Models.PortOperations

@{
    ViewData["Title"] = "Create";
}

<h2>حركة أدخال</h2>

 
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MovementType" class="control-label"></label>
                <select asp-for="MovementType" class="form-control">
                    <option value="">--اختر--</option>
                    <option value="دخول">دخول</option>
                    <option value="خروج">خروج</option>
                </select>
                <span asp-validation-for="MovementType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gender" class="control-label"></label>
                <select asp-for="Gender" class="form-control">
                    <option value="">--اختر--</option>
                    <option value="ذكر">ذكر</option>
                    <option value="أنثى">أنثى</option>
                </select>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TransportType" class="control-label"></label>
                <select asp-for="TransportType" class="form-control">
                    <option value="">--اختر--</option>
                    <option value="حافلة">حافلة</option>
                    <option value="سيارة">سيارة</option>
                </select>
                <span asp-validation-for="TransportType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="حفظ" class="btn btn-primary" /> |
                <a asp-action="Index" class="btn btn-outline-info">العودة الى القائمة</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
