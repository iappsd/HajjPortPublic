@model IEnumerable<HajjPort.Models.PortOperations>

@{
    ViewData["Title"] = "Index";
}

<h2>
   حركات الادخال
</h2>
<hr />
<p>
    <a asp-action="Create" class="btn btn-primary">
        إنشاء حركة ادخال جديد
    </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Port.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TransportType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MovementType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EntryDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Port.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TransportType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Gender)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MovementType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EntryDate)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.id" class="btn btn-outline-info">تعديل</a> |

                    <a asp-action="Delete" asp-route-id="@item.id" class="btn btn-outline-danger">حذف</a>
                </td>
            </tr>
        }
    </tbody>
</table>
