@model LoginViewModel

@{
    ViewData["Title"] = "تسجيل الدخول";
   

}

<!-- breadcrumb start -->
<div class="container p-4">
    <div class="container">
        <div class="row">
            <div class="col-sm-6">
                <div class="page-title">
                    <h2>  تسجيل الدخول</h2>
                </div>
            </div>
            <div class="col-sm-6">
            
            </div>
        </div>
    </div>
</div>
<!-- breadcrumb End -->
<!--section start-->
<section class="container bg-light p-3">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                      
                        <form asp-controller="Account" asp-action="Login" asp-route-returnUrl="@ViewData["ReturnUrl"]" class="theme-form" method="post" role="form">
                            <div asp-validation-summary="ModelOnly" class="text-danger text-center"></div>
                            <br />
                            <div class="form-group">
                                <label asp-for="Email" class="control-label"></label>
                                <span asp-validation-for="Email" class="text-danger"></span>
                                <input asp-for="Email" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label asp-for="Password" class="control-label"></label>
                                <span asp-validation-for="Password" class="text-danger"></span>
                                <input asp-for="Password" class="form-control" />
                            </div>

                            <div class="form-group">
                                <label asp-for="RememberMe" class="control-label">
                                    <input asp-for="RememberMe" />
                                    @Html.DisplayNameFor(m => m.RememberMe)
                                </label>
                                <span asp-validation-for="RememberMe" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="تسجيل الدخول" class="btn btn-primary" />
                            </div>

                        </form>
            </div>
     
        </div>
    </div>
</section>
<!--Section ends-->
                           






@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}