@model RoleVM

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/Layouts/_layout_light_sidebar.cshtml";
}
    
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
            
                <div class="row m-b-lg">
                    <div class="col-lg-12 text-center">
                        <h2>  Add New Role Name</h2>

                        <div asp-validation-summary="All" class="text-danger"></div>

                    </div>
                    <br />

                </div>
                <div>
                    <form method="post">
                        <ul class="list-group clear-list">
                            <li class="list-group-item fist-item">

                                <div class="col-md-12">
                                    <input asp-for="RoleName" placeholder="Role Name" type="text" class="form-control" />
                                </div>
                            </li>


                            <li class="list-group-item">


                                <div class="row">


                                    <div class="col-md-6  d-flex ">
                                        <a href="@Url.Action("Index","Admin")" class="btn btn-warning"> Back</a>
                                    </div>

                                    <div class="col text-right  ">
                                        <input asp-action="AddRole" type="submit" value="Add New Role Name" class="btn btn-primary" />
                                    </div>
                                </div>



                            </li>
                        </ul>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


