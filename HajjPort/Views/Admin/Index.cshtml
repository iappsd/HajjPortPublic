@model List<IdentityRole>

@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
          
                <div class="row m-b-lg">
                    <div class="col-lg-12 text-center">
                        <h2>Roles Name</h2>
                    </div>
                    <hr />

                </div>
                <div>
                    <div>
                        <ul class="list-group clear-list">
                            <li class="list-group-item ">
                                <div class="row">
                                    <div class="col-md-4">
                                        <label class="col-form-label">Role Id</label>
                                    </div>
                                    <div class="col-md-3">
                                        <label class="col-form-label">Role Name</label>
                                    </div>
                                    <div class="col-md-2 ">
                                    </div>
                                    <div class="col-md-1">
                                    </div>
                                    <div class="col-md-2">
                                    </div>
                                </div>
                            </li>
                            @foreach (var item in Model)
                            {
                                <li class="list-group-item ">
                                    <div class="row">
                                        <div class="col-md-4">
                                            <label class="col-form-label">@item.Id</label>
                                        </div>
                                        <div class="col-md-3">
                                            <label class="col-form-label">@item.Name</label>
                                        </div>
                                        <div class="col-md-2 ">
                                            <a href="@Url.Action("UserRoles","Admin",new {Id=@item.Id})" class="btn btn-primary">Add New User in Role</a>
                                        </div>
                                        <div class="col-md-1">
                                            <form asp-action="DeleteRole" method="post" asp-route-id="@item.Id">
                                                <input type="submit" class="btn btn-danger" value="Delete" />
                                            </form>
                                        </div>
                                        <div class="col-md-2">
                                            <button type="submit" asp-action="EditRole" asp-route-id="@item.Id" class="btn btn-warning">Edit Name</button>
                                        </div>
                                    </div>
                                </li>
                            }

                        </ul>
                    </div> <hr />
                    <a href="@Url.Action("AddRole","Admin")" class="btn btn-outline-info btn-block">Add New Role</a>
                    <hr />
                    <a href="@Url.Action("Register","Account")" class="btn btn-outline-warning btn-block">Add New User</a>
                </div>

            </div>
        </div>
    </div>
</div>
                

         



