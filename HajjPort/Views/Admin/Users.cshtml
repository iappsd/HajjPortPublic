@model IEnumerable<AppUser>
@{
    ViewData["Title"] = "Users";
 }

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">

                <div class="row m-b-lg">
                    <div class="col-lg-12 text-center">
                        <h2>  Users</h2>
                    </div>
                    <br />

                </div>
                <div>
                 
                    <table class="table">
                        <thead>
                            <tr>
                                <th>
                                    #
                                </th>

                                 <th>
                                     Name
                                 </th> 
                             
                                 <th>
                                     Email
                                 </th> 
                             
                                 <th>
                                     PhoneNumber
                                 </th> 
                             
                                 <th>
                                     UserName
                                 </th> 
                             
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @item.Id
                                    </td>
                                    <td>
                                        @item.Name
                                    </td>
                                    <td>
                                        @item.Email
                                    </td>
                                    <td>
                                        @item.PhoneNumber
                                    </td>
                                    <td>
                                        @item.UserName
                                    </td>
                               
                                </tr>
                            }
                        </tbody>
                    </table>
             
                </div>
            </div>
        </div>
    </div>
</div>

