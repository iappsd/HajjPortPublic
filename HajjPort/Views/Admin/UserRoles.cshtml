@model List<UserRolesVM>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/Layouts/_layout_light_sidebar.cshtml";

}


<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">


                <div class="row m-b-lg">
                    <div class="col-lg-12 text-center">
                        <h2> @ViewBag.RoleName</h2>
                    </div>
                    <hr />
                </div>
                <div>
                    <form method="post">
                        <ul class="list-group clear-list">
                            <li class="list-group-item ">
                                <div class="row">
                                    <div class="col-md-4">
                                        <label class="col-form-label">User Id</label>
                                    </div>
                                    <div class="col-md-4">
                                        <label class="col-form-label">User Name</label>
                                    </div>
                                    <div class="col-md-4 ">
                                        <label class="col-form-label">User Selected</label>
                                    </div>

                                </div>
                            </li>
                            @for (int i = 0; i < Model.Count; i++)
                            {
                                <li hidden>
                                    <input hidden asp-for="@Model[i].UserId" />
                                    <input hidden asp-for="@Model[i].UserName" />
                                </li>
                                <li class="list-group-item ">
                                    <div class="row">
                                        <div class="col-md-4">
                                            <label class="col-form-label">@Model[i].UserId </label>
                                        </div>
                                        <div class="col-md-4">
                                            <label class="col-form-label">@Model[i].UserName </label>
                                        </div>

                                        <div class="col-md-4">
                                            <input class="col-form-label" asp-for="@Model[i].IsSelected" />
                                        </div>

                                    </div>
                                </li>
                            }

                        </ul>
                        <input type="submit" class="btn btn-outline-info btn-block" value="Update" />

                    </form>

                </div>
            </div>
        </div>
    </div>
</div>
                    


